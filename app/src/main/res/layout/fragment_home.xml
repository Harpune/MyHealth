<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeViewModel"
            type="de.dbis.myhealth.ui.home.HomeViewModel" />

        <variable
            name="settingsViewModel"
            type="de.dbis.myhealth.ui.settings.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <include
            layout="@layout/item_player_state"
            bind:currentSpotifyTrack="@{settingsViewModel.currentSpotifyTrack}"
            bind:playerState="@{settingsViewModel.playerState}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>